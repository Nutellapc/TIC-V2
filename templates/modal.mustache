<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div id="detailsModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50">
    <div class="bg-white w-5/6 h-4/5 md:w-4/5 md:h-3/4 flex flex-col items-center justify-center p-10 rounded-lg shadow-lg relative">
        <!-- Botón para cerrar el modal -->
        <button
            class="absolute top-4 right-4 bg-red-500 text-white rounded-full p-2 shadow-lg hover:bg-red-700 transition-transform transform hover:scale-110"
            onclick="closeModal()">
            ✖
        </button>

        <!-- Título -->
        <h3 class="text-4xl font-bold text-gray-800 mb-8 text-center">Detalles de la Predicción</h3>

        <!-- Gráfico Radar -->
        <div class="w-full h-2/3 flex items-center justify-center">
            <canvas id="radarChart" class="w-5/6 h-full"></canvas>
        </div>

        <!-- Información del estudiante abajo -->
        <div class="w-full flex flex-col items-center justify-center mt-8 space-y-4">
            <div class="text-gray-700 text-2xl">
                <p><strong>Nombre:</strong> <span id="modalName"></span></p>
            </div>
            <div class="text-gray-700 text-2xl">
                <p><strong>ID de Usuario:</strong> <span id="modalUserId"></span></p>
            </div>
            <div class="text-gray-700 text-2xl text-center mt-4">
                <p><strong>Predicción:</strong></p>
                <p id="modalPrediction" class="mt-2"></p>
            </div>

        </div>




    </div>
</div>

