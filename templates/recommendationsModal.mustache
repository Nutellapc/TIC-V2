<!-- Modal de Recomendaciones -->
<div id="recommendationsModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50">
    <div class="bg-white w-5/6 h-auto md:w-3/5 flex flex-col items-center justify-center p-6 rounded-lg shadow-lg relative">
        <!-- Botón para cerrar el modal -->
        <button
            class="absolute top-4 right-4 bg-red-500 text-white rounded-full p-2 shadow-lg hover:bg-red-700 transition-transform transform hover:scale-110"
            onclick="closeRecommendationsModal()">
            ✖
        </button>

        <!-- Título -->
        <h3 class="text-3xl font-bold text-gray-800 mb-6 text-center">Recomendaciones</h3>

        <!-- Imagen de desempeño según la predicción -->
        <div class="mt-4 flex justify-center">
            <img id="performanceImage" src="" class="w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 object-contain">
        </div>

        <!-- Contenido de recomendaciones para el maestro -->
        <div class="text-gray-700 text-lg text-center mt-6 w-full">
            <p><strong>Estudiante:</strong></p>
            <p id="recommendationsName" class="mt-2"></p> <!-- Nombre del estudiante -->
            <p class="font-semibold text-gray-800 mt-4">Recomendación para el maestro:</p>
            <p id="recommendationsTeacherContent" class="mt-2 text-justify px-4"></p>
        </div>

        <!-- Contenido de recomendaciones para el estudiante -->
        <div class="text-gray-700 text-lg text-center w-full">
            <p class="font-semibold text-gray-800 mt-4">Recomendación para el estudiante:</p>
            <textarea id="recommendationsContent"
                      class="mt-2 text-justify w-full h-24 md:h-32 border border-gray-300 rounded-lg p-2 resize-none"
                      placeholder="Escribe la recomendación aquí..."></textarea>
        </div>

        <!-- Botón para enviar la recomendación -->
        <button
            class="mt-6 bg-blue-500 text-white px-6 py-2 rounded-lg shadow-lg hover:bg-blue-700 transition-transform transform hover:scale-105"
            onclick="sendRecommendation()">
            Enviar Recomendación
        </button>
    </div>
</div>


