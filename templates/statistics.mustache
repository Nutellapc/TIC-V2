<div class="bg-white p-6 rounded shadow mt-6">
    <h2 class="text-2xl font-bold mb-4 text-red-600">Estadísticas Generales de Estudiantes</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

        <!-- Tarjeta: Estudiantes Activos -->
        <div class="p-4 bg-red-100 rounded-lg shadow flex items-center hover:bg-red-200 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-red-800">Estudiantes Activos</h3>
                <p class="text-3xl font-bold" data-target="{{active_students}}">0</p>
                <p class="text-sm text-red-700">Usuarios activos en los últimos 30 días</p>
            </div>
            <div>
                <span class="material-icons text-red-600 text-4xl">groups</span>
            </div>
        </div>

        <!-- Tarjeta: Calificaciones Promedio -->
        <div class="p-4 bg-green-100 rounded-lg shadow flex items-center hover:bg-green-200 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-green-900">Calificaciones Promedio</h3>
                <p class="text-3xl font-bold" data-target="{{average_grades}}">0</p>
                <p class="text-sm text-green-800">Promedio general de las calificaciones</p>
            </div>
            <div>
                <span class="material-icons text-green-700 text-4xl">grade</span>
            </div>
        </div>

        <!-- Tarjeta: Tareas Enviadas -->
        <div class="p-4 bg-yellow-200 rounded-lg shadow flex items-center hover:bg-yellow-300 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-yellow-900">Tareas Enviadas</h3>
                <p class="text-3xl font-bold" data-target="{{assignments_submitted}}">0</p>
                <p class="text-sm text-yellow-800">Tareas enviadas en los últimos 30 días</p>
            </div>
            <div>
                <span class="material-icons text-yellow-700 text-4xl">assignment_turned_in</span>
            </div>
        </div>

        <!-- Tarjeta: Tiempo Conectado -->
        <div class="p-4 bg-purple-200 rounded-lg shadow flex items-center hover:bg-purple-300 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-purple-900">Estudiantes Inscritos</h3>
                <p class="text-3xl font-bold" data-target="{{enrolled_students_count}}">0</p>
                <p class="text-sm text-purple-800">Total de estudiantes inscritos en este curso</p>
            </div>
            <div>
                <span class="material-icons text-purple-700 text-4xl">group</span>
            </div>
        </div>

    </div>
</div>
