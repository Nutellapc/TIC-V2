<!-- Sección de estadísticas generales -->
<div class="bg-white p-6 rounded shadow mt-6">
    <h2 class="text-2xl font-bold mb-4 text-blue-600">Estadísticas Generales de Estudiantes</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Tarjeta: Estudiantes Activos -->
        <div class="p-4 bg-blue-100 rounded-lg shadow flex items-center hover:bg-blue-200 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-blue-800">Estudiantes Activos</h3>
                <p class="text-3xl font-bold" data-target="{{active_students}}">0</p>
                <p class="text-sm text-blue-700">Usuarios activos en los últimos 30 días</p>
            </div>
            <div>
                <span class="material-icons text-blue-600 text-4xl">groups</span>
            </div>
        </div>

        <!-- Tarjeta: Calificaciones Promedio -->
        <div class="p-4 bg-green-100 rounded-lg shadow flex items-center hover:bg-green-200 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-green-800">Calificaciones Promedio</h3>
                <p class="text-3xl font-bold" data-target="{{average_grades}}">0</p>
                <p class="text-sm text-green-700">Promedio general de las calificaciones</p>
            </div>
            <div>
                <span class="material-icons text-green-600 text-4xl">grade</span>
            </div>
        </div>

        <!-- Tarjeta: Tareas Enviadas -->
        <div class="p-4 bg-yellow-100 rounded-lg shadow flex items-center hover:bg-yellow-200 hover:shadow-lg transition duration-300">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-yellow-800">Tareas Enviadas</h3>
                <p class="text-3xl font-bold" data-target="{{assignments_submitted}}">0</p>
                <p class="text-sm text-yellow-700">Tareas enviadas en los últimos 30 días</p>
            </div>
            <div>
                <span class="material-icons text-yellow-600 text-4xl">assignment_turned_in</span>
            </div>
        </div>
    </div>
</div>
